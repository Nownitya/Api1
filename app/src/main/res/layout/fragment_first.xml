                    android:layout_marginTop="144dp"
                    android:layout_marginEnd="192dp"
                    android:text="Progress"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name1" />

                <Button
